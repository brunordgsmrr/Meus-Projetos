package application;

public class Aluno {

	private int id;
	private int faltas;
	private double p1, p2;
	private int frequencia;
	private double mediaFinal;

	public Aluno(int id, int faltas, double p1, double p2, int aulasPeriodo) {
		this.id = id;
		this.faltas = faltas;
		this.p1 = p1;
		this.p2 = p2;
		this.frequencia = this.faltas / aulasPeriodo * 100; //frequencia = faltas / aulasPeriodo * 100
		this.mediaFinal = (this.p1 + this.p2)/2; // md = (p1 + p2) / 2
	}	
	
	public int getId() {
		return id;
	}
	public int getFaltas() {
		return faltas;
	}
	public double getP1() {
		return p1;
	}
	public double getP2() {
		return p2;
	}
	public void setId(int id) {
		this.id = id;
	}
	public void setFaltas(int faltas) {
		this.faltas = faltas;
	}
	public void setP1(double p1) {
		this.p1 = p1;
	}
	public void setP2(double p2) {
		this.p2 = p2;
	}
	
	public void avaliacaoFaltas() {
		if
	}
	
	public void avaliaNotas() {
		//todo
	}
	
	

	
}
