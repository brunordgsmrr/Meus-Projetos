package application;

/**
 * @author Bruno Rodrigues (11211501661@alunos.umc.br)
 *
 */
public class Operadores {

	public float adicao (float v1, float v2) {
		return v1+v2;
	}
	
	public float subtracao (float v1, float v2) {
		return v1-v2;
	}
	
	public float multiplicacao (float v1, float v2) {
		return v1*v2;
	}
	
	public float divisao (float v1, float v2) {
		return v1/v2;
	}
	
	public float areaCirculo (float raio) {
		return (float) Math.PI * (float) Math.pow(raio, 2);
	}
	
	public float areaTrapezio (float baseMaior, float baseMenor, float altura) {
		return (baseMaior + baseMenor) * altura / 2;
	}
}
