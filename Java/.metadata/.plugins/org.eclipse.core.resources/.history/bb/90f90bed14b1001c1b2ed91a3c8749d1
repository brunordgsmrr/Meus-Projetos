        Relogio r = new Relogio(120,50,70);
        System.out.println("Horário: " + r.getHora() + ":" + r.getMinuto() + ":" + r.getSegundo());
        System.out.println("\n");
        
        //Utilizando construtor que requer hora e minuto        
        System.out.println("Utilizando construtor que requer hora e minuto");
        r = new Relogio(10,70);
        System.out.println("Horário: " + r.getHora() + ":" + r.getMinuto() + ":" + r.getSegundo());
        System.out.println("\n");
        
        //Utilizando construtor que requer apenas a hora        
        System.out.println("Utilizando construtor que requer apenas a hora");
        r = new Relogio(120);
        System.out.println("Horário: " + r.getHora() + ":" + r.getMinuto() + ":" + r.getSegundo());
        System.out.println("\n");
        
        //Utilizando construtor vazio, mas atributos valores atraves dos metodos de acesso
        System.out.println("Utilizando construtor vazio, mas atribuindo os valores atraves dos metodos de acesso");
        r = new Relogio();
        r.setHora(13);
        r.setMinuto(40);
        r.setSegundo(70);
        System.out.println("Horário: " + r.getHora() + ":" + r.getMinuto() + ":" + r.getSegundo());
        System.out.println("\n");
        
