package application;

public class Aluno {

	private int id;
	private int faltas;
	private double p1, p2;
	private int frequencia;
	private double mediaFinal;
	private boolean complementar;

	public Aluno(int id, int faltas, double p1, double p2, int aulasPeriodo) {
		this.id = id;
		this.faltas = faltas;
		this.p1 = p1;
		this.p2 = p2;
		this.frequencia = this.faltas / aulasPeriodo * 100; //frequencia = faltas / aulasPeriodo * 100
		this.mediaFinal = (this.p1 + this.p2)/2; // md = (p1 + p2) / 2
		this.complementar = false;
	}	
	
	public int getId() {
		return id;
	}
	public int getFaltas() {
		return faltas;
	}
	public double getP1() {
		return p1;
	}
	public double getP2() {
		return p2;
	}	
	public int getFrequencia() {
		return frequencia;
	}

	public double getMediaFinal() {
		return mediaFinal;
	}
	public void setId(int id) {
		this.id = id;
	}
	public void setFaltas(int faltas) {
		this.faltas = faltas;
	}
	public void setP1(double p1) {
		this.p1 = p1;
	}
	public void setP2(double p2) {
		this.p2 = p2;
	}
	
	public void avaliacaoFaltas() {
		if (this.getFrequencia() >= 75) {
			System.out.println("Aluno aprovado no quesito de frequência");
			this.avaliaNotas();
		} else {
			System.out.println("Aluno reprovado, presenção menor que 75%");
		}		
	}
	
	public void avaliaNotas() {
		if (this.getMediaFinal() <= 5.0) {
			System.out.println("Aluno reprovado, frequência maior que 75%, porem sua média final foi menor que 5.0");
		}
		else if (this.getMediaFinal() > 5.0 && this.getMediaFinal() < 7.0 && !this.complementar){
			
			prova
		}
	}
	
	public void provaCompl(double p1, double p2) {
		this.setP1(p1);
		this.setP2(p2);
		this.complementar = true;
		
	}

	
}
