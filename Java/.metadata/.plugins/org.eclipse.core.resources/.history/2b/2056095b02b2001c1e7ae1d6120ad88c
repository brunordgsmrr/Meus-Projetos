package application;

public class Aluno {

	private int id;
	private int faltas;
	private double p1, p2;

	public Aluno(int id, int faltas, double p1, double p2) {
		this.id = id;
		this.faltas = faltas;
		this.p1 = p1;
		this.p2 = p2;
	}	
	
	public int getId() {
		return id;
	}
	public int getFaltas() {
		return faltas;
	}
	public double getP1() {
		return p1;
	}
	public double getP2() {
		return p2;
	}
	public void setId(int id) {
		this.id = id;
	}
	public void setFaltas(int faltas) {
		this.faltas = faltas;
	}
	public void setP1(double p1) {
		this.p1 = p1;
	}
	public void setP2(double p2) {
		this.p2 = p2;
	}

	public void calcFrequencia(int aulasPerido) {
		if (aulasPeriodo >= this.faltas) 
		{
			this.frequencia = faltas / aulasPeriodo * 100;
		} else {
			this.frequencia = 0;
			System.out.println("Valor de faltas ou aulasPeriodo errada");
		}
	}

	
}
